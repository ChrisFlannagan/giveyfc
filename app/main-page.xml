<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded">
  <GridLayout rows="80,*,80">
  <Image src="~/imgs/logo.jpg" row="0" />
    <StackLayout row="1">
      <Label text="Your First Name" />
      <TextView id="user-name" text="{{ firstName }}" />
      <Label text="Your Last Name" />
      <TextView id="user-lname" text="{{ lastName }}" />
      <Label text="Your Email" />
      <TextView id="user-email" text="{{ userEmail }}" hint="Email Address" keyboardType="email" autocorrect="false" autocapitalizeationType="none" />
      <Label text="Security PIN (4 digits)" />
      <TextView id="user-pin" text="{{ userPin }}" keyboardType="phone" />
    </StackLayout>
  <Button row="2" class="big-yellow-btns" text="Sign In" tap="saveUser" />
  </GridLayout>
</Page>